<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back"
    tools:context=".FragmentNews">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_newsList_linerlayout"
            android:gravity="center"
            android:background="@color/nemesis_red_light"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"

            >
            <ProgressBar
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_newsList"
                android:gravity="center" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Loading..."
                android:id="@+id/loading_textview"
                android:textSize="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top"

            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/progressBar_newsList_linerlayout"
            android:background="@color/nemesis_red_light"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bhitorer_upper"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/music_title_displayer"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bhitorer_up"
                    android:layout_below="@id/bhitorer_upper"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/a1"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/b1"
                        android:padding="1dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:id="@+id/playerButtonsLayout"
                            android:padding="5dp"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:id="@+id/backward"
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/nemesis_backward_fill"
                                    android:id="@+id/backward_button"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:id="@+id/playpause"
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/nemesis_play_fill"
                                    android:id="@+id/playpause_button"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:id="@+id/forward"
                                android:padding="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/nemesis_forward_fill"
                                    android:id="@+id/forward_button"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/c1"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bhitorer_down"
                    android:layout_below="@id/bhitorer_up">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/a"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                        <TextView
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/music_timeleft"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/b"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/seekBar"
                            android:thumbTint="@color/white"
                            android:progressBackgroundTint="@color/white"
                            android:progressTint="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/c"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_weight="3"

                        >
                        <TextView
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/music_timetotal"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musicBrowser"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/bhitorer_down"
                    android:background="@color/nemesis_red_light">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/bbb"
                        android:padding="1dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/music_album_bar_height"
                            android:src="@mipmap/back_button"
                            android:id="@+id/back_button"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/ccc"
                        android:orientation="vertical"
                        android:layout_weight="5"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Albums"
                            android:id="@+id/album_title_text_view"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:id="@+id/eee"
                        android:padding="1dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_layout"
            android:paddingTop="2dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >


            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>

        <ListView
            android:layout_below="@id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_album_music"
            android:layout_above="@id/bottom_layout"
            android:paddingTop="10dp"
            android:dividerHeight="0dp"
            android:divider="@null"
            />
<!--error , emty view -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error_music_fragment"
            android:background="@color/nemesis_red_light"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/top"
            android:layout_marginTop="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/aaa"
                android:layout_centerInParent="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Couldn't connect!"
                    android:paddingTop="10dp"
                    android:id="@+id/error_textView"
                    android:textColor="@color/error_color_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/aaa"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar_connecting"
                    android:gravity="center"
                    android:padding="1dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Waiting for network..."
                    android:textColor="@color/error_color_text"
                    android:id="@+id/connecting"/>

            </LinearLayout>
        </RelativeLayout>

        <!--end of error view -->
    </RelativeLayout>

</FrameLayout>
